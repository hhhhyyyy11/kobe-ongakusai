{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Build Kobe Ongakusai Website",
      "command": "npm",
      "args": ["run", "build"],
      "group": "build",
      "isBackground": false,
      "problemMatcher": ["$tsc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "type": "shell",
      "label": "Start Development Server",
      "command": "npm",
      "args": ["run", "dev"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": ["$tsc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "type": "shell",
      "label": "Lint Check",
      "command": "npm",
      "args": ["run", "lint"],
      "group": "test",
      "isBackground": false,
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
